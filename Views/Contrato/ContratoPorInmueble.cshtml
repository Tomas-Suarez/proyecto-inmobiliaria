@model IEnumerable<proyecto_inmobiliaria.Dtos.response.ContratoResponseDTO>

@{
    ViewData["Title"] = "Contratos del Inmueble";
    int paginaActual = ViewData["PaginaActual"] != null ? (int)ViewData["PaginaActual"]! : 1;
    int totalPaginas = ViewData["TotalPaginas"] != null ? (int)ViewData["TotalPaginas"]! : 1;
    int idInmueble = ViewData["IdInmueble"] != null ? (int)ViewData["IdInmueble"]! : 0;
}

<h1>
    Contratos de @ViewBag.InmuebleDireccion
    <div class="btn-group float-right">
        <a class="btn btn-secondary" asp-controller="Inmueble" asp-action="Index">Volver</a>
    </div>
</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id Contrato</th>
            <th>Inquilino</th>
            <th>Monto</th>
            <th>Fecha Desde</th>
            <th>Fecha Hasta</th>
            <th>Finalizado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contrato in Model)
        {
            <tr>
                <td>@contrato.IdContrato</td>
                <td>@contrato.NombreCompletoInquilino</td>
                <td>$@contrato.Monto</td>
                <td>@contrato.FechaDesde.ToString("dd/MM/yyyy")</td>
                <td>@contrato.FechaHasta.ToString("dd/MM/yyyy")</td>
                <td>
                    @if (contrato.Finalizado)
                    {
                        <span class="badge bg-danger">Finalizado</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-primary" asp-action="Modificar" asp-route-IdContrato="@contrato.IdContrato" title="Editar">
                            <i class="fa-solid fa-pen"></i> Editar
                        </a>

                        <form asp-action="Eliminar" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@contrato.IdContrato" />
                            <button type="submit" class="btn btn-danger" title="Eliminar"
                                    onclick="return confirm('¿Seguro que querés eliminar de forma PERMANENTE este contrato?');">
                                <i class="fa-solid fa-trash-can"></i> Eliminar
                            </button>
                        </form>

                        <a class="btn btn-warning" asp-action="Detalles" asp-route-IdContrato="@contrato.IdContrato" title="Ver detalles">
                            <i class="fa-solid fa-eye"></i> Detalles
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Paginación">
    <ul class="pagination justify-content-center">
        <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
            <a class="page-link" asp-action="PorInmueble"
               asp-route-IdInmueble="@idInmueble"
               asp-route-paginaNro="@(paginaActual - 1)">
                Anterior
            </a>
        </li>

        @for (int i = 1; i <= totalPaginas; i++)
        {
            <li class="page-item @(i == paginaActual ? "active" : "")">
                <a class="page-link" asp-action="PorInmueble"
                   asp-route-IdInmueble="@idInmueble"
                   asp-route-paginaNro="@i">
                    @i
                </a>
            </li>
        }

        <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
            <a class="page-link" asp-action="PorInmueble"
               asp-route-IdInmueble="@idInmueble"
               asp-route-paginaNro="@(paginaActual + 1)">
                Siguiente
            </a>
        </li>
    </ul>
</nav>
