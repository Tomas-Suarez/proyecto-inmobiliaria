@model IEnumerable<object>

@{
    ViewData["Title"] = "Auditorías";
    string tipoAuditoria = ViewData["TipoAuditoria"] as string ?? "";
    int paginaActual = ViewData["PaginaActual"] != null ? (int)ViewData["PaginaActual"]! : 1;
    int totalPaginas = ViewData["TotalPaginas"] != null ? (int)ViewData["TotalPaginas"]! : 1;
}

<h1>Auditorías</h1>

<div class="mb-4">
    <a class="btn btn-primary" asp-action="Index" asp-route-tipoAuditoria="Contrato">Auditoría de Contrato</a>
    <a class="btn btn-secondary" asp-action="Index" asp-route-tipoAuditoria="Pago">Auditoría de Pago</a>
</div>

@if (!string.IsNullOrEmpty(tipoAuditoria))
{
    <h4>Mostrando auditorías de: @tipoAuditoria</h4>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    @if (tipoAuditoria == "Contrato")
                    {
                        <th class="text-center">Id Contrato</th>
                    }
                    else if (tipoAuditoria == "Pago")
                    {
                        <th class="text-center">Núm. Pago</th>
                        <th class="text-center">Id Contrato</th>
                    }
                    <th>Usuario</th>
                    <th class="text-center">Acción</th>
                    <th class="text-center">Fecha Acción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var auditoria in Model)
                {
                    if (tipoAuditoria == "Contrato")
                    {
                        var a = auditoria as proyecto_inmobiliaria.Dtos.response.AuditoriaContratoResponseDTO;
                        <tr>
                            <td class="text-center">@a!.IdContrato</td>
                            <td>@a.NombreUsuario</td>
                            <td class="text-center">
                                @{
                                    string claseBadge = "bg-secondary";
                                    switch (a.Accion.ToString())
                                    {
                                        case "CREACION":
                                            claseBadge = "bg-success";
                                            break;
                                        case "MODIFICACION":
                                            claseBadge = "bg-info text-dark";
                                            break;
                                        case "BAJA":
                                            claseBadge = "bg-danger";
                                            break;
                                        case "FINALIZACION":
                                            claseBadge = "bg-warning text-dark";
                                            break;
                                    }
                                }
                                <span class="badge @claseBadge fs-6">@a.Accion</span>
                            </td>
                            <td class="text-center">@a.FechaAccion.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                    }
                    else if (tipoAuditoria == "Pago")
                    {
                        var p = auditoria as proyecto_inmobiliaria.Dtos.response.AuditoriaPagoResponseDTO;
                        <tr>
                            <td class="text-center">@p!.NumeroPago</td>
                            <td class="text-center">@p.IdContrato</td>
                            <td>@p.NombreUsuario</td>
                            <td class="text-center">
                                @{
                                    string claseBadgePago = "bg-secondary";
                                    switch (p.Accion.ToString())
                                    {
                                        case "CREACION":
                                            claseBadgePago = "bg-success";
                                            break;
                                        case "MODIFICACION":
                                            claseBadgePago = "bg-info text-dark";
                                            break;
                                        case "BAJA":
                                            claseBadgePago = "bg-danger";
                                            break;
                                    }
                                }
                                <span class="badge @claseBadgePago fs-6">@p.Accion</span>
                            </td>
                            <td class="text-center">@p.FechaAccion.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <nav aria-label="Paginación">
        <ul class="pagination justify-content-center">
            <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-tipoAuditoria="@tipoAuditoria"
                   asp-route-paginaNro="@(paginaActual - 1)">
                    Anterior
                </a>
            </li>

            @for (int i = 1; i <= totalPaginas; i++)
            {
                <li class="page-item @(i == paginaActual ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-tipoAuditoria="@tipoAuditoria"
                       asp-route-paginaNro="@i">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-tipoAuditoria="@tipoAuditoria"
                   asp-route-paginaNro="@(paginaActual + 1)">
                    Siguiente
                </a>
            </li>
        </ul>
    </nav>
}
else
{
    <div class="alert alert-info" role="alert">
        Seleccione un tipo de auditoría para visualizar los registros.
    </div>
}