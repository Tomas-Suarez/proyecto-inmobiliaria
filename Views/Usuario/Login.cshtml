@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5" style="max-width: 400px;">
    <h2 class="text-center mb-4">Iniciar sesión</h2>

    @if (TempData["ErrorMensaje"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMensaje"]
        </div>
    }

    <form asp-action="Login" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group mb-3">
            <label for="nombreUsuario">Usuario</label>
            <input name="nombreUsuario" class="form-control" id="nombreUsuario" placeholder="Ingrese su usuario" required />
        </div>

        <div class="form-group mb-3">
            <label for="contrasena">Contraseña</label>
            <input name="contrasena" type="password" class="form-control" id="contrasena" placeholder="Contraseña" required />
        </div>

        <button type="submit" class="btn btn-primary w-100">Iniciar sesión</button>
    </form>

    <div class="mt-3 text-center">
        <p>¿No tienes cuenta? <a asp-action="Register" asp-controller="Usuario">Regístrate aquí</a></p>
    </div>
</div>
