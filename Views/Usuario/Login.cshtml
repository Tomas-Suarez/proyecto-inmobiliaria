@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Login";
}


<div class="d-flex justify-content-center align-items-center vh-100" style="background: #f5f5f5;">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 400px; border-radius: 15px;">
        <h2 class="text-center mb-4" style="color: #333; font-weight: 600;">Iniciar sesi칩n</h2>

        @if (TempData["ErrorMensaje"] != null)
        {
            <div class="alert alert-danger text-center">
                @TempData["ErrorMensaje"]
            </div>
        }

        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group mb-3">
