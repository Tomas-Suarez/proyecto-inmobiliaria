                <input name="nombreUsuario" class="form-control" id="nombreUsuario" placeholder="Ingrese su usuario" required style="border-radius: 10px;"/>
            </div>

            <div class="form-group mb-4">
                <label for="contrasena" class="form-label fw-bold">Contrase침a</label>
                <input name="contrasena" type="password" class="form-control" id="contrasena" placeholder="Contrase침a" required style="border-radius: 10px;"/>
            </div>

            <button type="submit" class="btn btn-primary w-100" style="border-radius: 10px; background: linear-gradient(90deg,#4e73df,#224abe); border: none; padding: 10px 0; font-weight: 500;">Iniciar sesi칩n</button>
        </form>
    </div>
</div>

