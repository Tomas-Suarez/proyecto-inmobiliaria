@using proyecto_inmobiliaria.Enum
@model IEnumerable<proyecto_inmobiliaria.Dtos.response.PropietarioResponseDTO>

@{
    ViewData["Title"] = "Propietarios";
}

<h1>
    Propietarios
    <div class="btn-group float-right">
        <a class="btn btn-primary" asp-action="Crear" title="Crear">
            <i class="fa-solid fa-plus"></i> Crear
        </a>
    </div>
</h1>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th class="text-center">Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th class="text-center">Documento</th>
                <th class="text-center">Teléfono</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var propietario in Model)
            {
                <tr>
                    <td class="text-center">@propietario.IdPropietario</td>
                    <td>@propietario.Nombre</td>
                    <td>@propietario.Apellido</td>
                    <td class="text-center">@propietario.Documento</td>
                    <td class="text-center">@propietario.Telefono</td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a class="btn btn-sm btn-primary" asp-action="Modificar"
                               asp-route-IdPropietario="@propietario.IdPropietario" title="Editar">
                                <i class="fa-solid fa-pen"></i> Editar
                            </a>

                            @if (User.IsInRole(Enum.GetName(typeof(ERol), ERol.Administrador)!))
                            {
                                var formId = $"formEliminar-{propietario.IdPropietario}";

                                <form asp-action="Eliminar" method="post" class="d-inline" id="@formId">
                                    <input type="hidden" name="id" value="@propietario.IdPropietario" />
                                    
                                    <button type="button" class="btn btn-sm btn-danger" title="Eliminar"
                                            onclick="mostrarModalConfirmacion('Eliminar Propietario', '¿Seguro que querés eliminar a @propietario.Nombre @propietario.Apellido?', '@formId')">
                                        <i class="fa-solid fa-trash-can"></i> Eliminar
                                    </button>
                                </form>
                            }

                            <a class="btn btn-sm btn-warning" asp-action="Detalles"
                               asp-route-IdPropietario="@propietario.IdPropietario" title="Ver detalles">
                                <i class="fa-solid fa-eye"></i> Detalles
                            </a>

                            <a class="btn btn-sm btn-secondary" asp-controller="Inmueble" asp-action="PorPropietario"
                               asp-route-IdPropietario="@propietario.IdPropietario" title="Mis Propiedades">
                                <i class="fa-solid fa-building"></i> Mis propiedades
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@await Html.PartialAsync("_ModalConfirmacion", ("", "", ""))
@await Html.PartialAsync("_ModalMensaje", TempData["ErrorMensaje"] as string)
<script src="~/js/modalReutilizable.js"></script>