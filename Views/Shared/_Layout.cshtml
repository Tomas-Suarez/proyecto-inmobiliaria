@using proyecto_inmobiliaria.Enum
@{
    var avatarUrl = User.Claims.FirstOrDefault(c => c.Type == "avatar")?.Value ?? "/img/avatar-default.jpg";
    var nombreUsuario = User.Identity!.Name ?? "Usuario";
}
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - inmobiliaria</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/proyecto_inmobiliaria.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-custom border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link border rounded px-3 me-2 @(ViewData["ActivePage"]?.ToString() == "Home" ? "active-nav" : "")"
                               asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link border rounded px-3 me-2 @(ViewData["ActivePage"]?.ToString() == "Propietario" ? "active-nav" : "")"
                               asp-area="" asp-controller="Propietario" asp-action="Index">Propietarios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link border rounded px-3 @(ViewData["ActivePage"]?.ToString() == "Inquilino" ? "active-nav" : "")"
                               asp-area="" asp-controller="Inquilino" asp-action="Index">Inquilinos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link border rounded px-3 @(ViewData["ActivePage"]?.ToString() == "Inmueble" ? "active-nav" : "")"
                               asp-area="" asp-controller="Inmueble" asp-action="Index">Inmuebles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link border rounded px-3 @(ViewData["ActivePage"]?.ToString() == "Contrato" ? "active-nav" : "")"
                               asp-area="" asp-controller="Contrato" asp-action="Index">Contratos</a>
                        </li>
                        @if (User.IsInRole(Enum.GetName(typeof(ERol), ERol.Administrador)!))
                        {
                            <li class="nav-item">
                                <a class="nav-link border rounded px-3 @(ViewData["ActivePage"]?.ToString() == "Usuario" ? "active-nav" : "")"
                                   asp-area="" asp-controller="Usuario" asp-action="Index">Usuarios</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link border rounded px-3 @(ViewData["ActivePage"]?.ToString() == "Auditoria" ? "active-nav" : "")"
                                   asp-area="" asp-controller="Auditoria" asp-action="Index">Auditoría</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="avatarDropdown"
                                   role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="@avatarUrl" alt="Avatar" class="rounded-circle" width="35" height="35" />
                                    <span class="ms-2">@nombreUsuario</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="avatarDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Usuario" asp-action="Perfil">Configuración</a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Usuario" asp-action="Logout">Cerrar sesión</a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2025 - Inmobiliaria - Tomas Agustin Suarez
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
