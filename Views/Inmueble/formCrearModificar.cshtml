@model proyecto_inmobiliaria.Dtos.request.InmuebleRequestDTO

@{
    bool crearInmueble = Model.IdInmueble == 0;
    ViewData["Title"] = crearInmueble ? "Crear Inmueble" : "Editar Inmueble";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="@(crearInmueble ? "Crear" : "Modificar")" method="post">
    <input type="hidden" asp-for="IdInmueble" />

    <div class="form-group">
        <label asp-for="IdTipoInmueble" class="control-label">Tipo</label>
        <select asp-for="IdTipoInmueble" class="form-control" asp-items="ViewBag.TiposInmueble">
            <option value="">-- Seleccionar Tipo --</option>
        </select>
        <span asp-validation-for="IdTipoInmueble" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IdEstadoInmueble" class="control-label">Estado</label>
        <select asp-for="IdEstadoInmueble" class="form-control" asp-items="ViewBag.EstadosInmueble">
            <option value="">-- Seleccionar Estado --</option>
        </select>
        <span asp-validation-for="IdEstadoInmueble" class="text-danger"></span>
    </div>

    @if (crearInmueble)
    {
        <div class="form-group">
            <label>Documento Propietario</label>
            <div class="input-group">
                <input type="text" id="docPropietario" class="form-control" placeholder="Ingrese documento..." />
                <button type="button" id="btnBuscar" class="btn btn-outline-primary">Buscar</button>
            </div>
            <span class="text-danger" id="errorPropietario"></span>
        </div>

        <div id="propietarioInfo" style="display:none; margin-top:10px;" class="alert alert-info">
            <p><strong>Propietario encontrado:</strong> <span id="nombrePropietario"></span></p>
        </div>

        <input type="hidden" asp-for="IdPropietario" id="idPropietario" />
    }
    else
    {
        <div class="form-group">
            <label class="control-label">Propietario</label>
            <div class="alert alert-secondary" role="alert">
                @ViewBag.NombrePropietario
            </div>
        </div>
        <input type="hidden" asp-for="IdPropietario" />
    }

    <div class="form-group">
        <label asp-for="Direccion" class="control-label"></label>
        <input asp-for="Direccion" class="form-control" />
        <span asp-validation-for="Direccion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CantidadAmbientes" class="control-label"></label>
        <input asp-for="CantidadAmbientes" class="form-control" type="number" min="1" />
        <span asp-validation-for="CantidadAmbientes" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SuperficieM2" class="control-label"></label>
        <input asp-for="SuperficieM2" class="form-control" type="number" step="0.01" min="0" />
        <span asp-validation-for="SuperficieM2" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <script>
        const idPropietarioInput = document.getElementById("idPropietario");
        const errorPropietario = document.getElementById("errorPropietario");
        const docPropietarioInput = document.getElementById("docPropietario");
        const btnBuscar = document.getElementById("btnBuscar");

        docPropietarioInput?.addEventListener("input", function () {
            idPropietarioInput.value = "";
            document.getElementById("propietarioInfo").style.display = "none";
            if (docPropietarioInput.value.trim() !== "") {
                errorPropietario.innerText = "Presione 'Buscar' para validar el documento.";
            } else {
                errorPropietario.innerText = "";
            }
        });

        btnBuscar?.addEventListener("click", function () {
            var documento = docPropietarioInput.value;

            fetch(`/Propietario/BuscarPorDocumento?documento=${documento}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        document.getElementById("propietarioInfo").style.display = "block";
                        document.getElementById("nombrePropietario").innerText = data.data.nombre + " " + data.data.apellido;
                        idPropietarioInput.value = data.data.idPropietario;
                        errorPropietario.innerText = "";
                    } else {
                        document.getElementById("propietarioInfo").style.display = "none";
                        idPropietarioInput.value = "";
                        errorPropietario.innerText = data.message;
                    }
                })
                .catch(err => {
                    console.error("Error en el fetch:", err);
                    document.getElementById("propietarioInfo").style.display = "none";
                    idPropietarioInput.value = "";
                    errorPropietario.innerText = "Error al buscar propietario. Revisa la consola.";
                });
        });
    </script>
}

@await Html.PartialAsync("_ModalMensaje", TempData["ErrorMensaje"] as string)