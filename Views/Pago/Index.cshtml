@model IEnumerable<proyecto_inmobiliaria.Dtos.response.PagoResponseDTO>

@{
    ViewData["Title"] = "Pagos";
    int paginaActual = ViewData["PaginaActual"] != null ? (int)ViewData["PaginaActual"]! : 1;
    int totalPaginas = ViewData["TotalPaginas"] != null ? (int)ViewData["TotalPaginas"]! : 1;
    int idContrato = ViewData["IdContrato"] != null ? (int)ViewData["IdContrato"]! : 0;

    bool contratoFinalizado = ViewData["ContratoFinalizado"] != null && (bool)ViewData["ContratoFinalizado"]!;
    bool contratoFinalizadoAnticipado = ViewData["ContratoFinalizadoAnticipado"] != null && (bool)ViewData["ContratoFinalizadoAnticipado"]!;
    int pagosRestantes = ViewData["PagosRestantes"] != null ? (int)ViewData["PagosRestantes"]! : 0;
    
    // Se obtiene el nuevo valor de pagos pendientes
    int pagosPendientes = ViewData["PagosPendientes"] != null ? (int)ViewData["PagosPendientes"]! : 0;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Pagos del Contrato #@idContrato</h1>
    <div class="btn-group">
        @if (!contratoFinalizado && pagosRestantes > 0)
        {
            <a class="btn btn-primary" asp-action="Crear" asp-route-idContrato="@idContrato" title="Registrar Pago">
                <i class="fa-solid fa-plus"></i> Registrar Pago
            </a>
        }
        else if (contratoFinalizadoAnticipado)
        {
            <button class="btn btn-danger" disabled>
                <i class="fa-solid fa-ban"></i> Contrato finalizado anticipadamente
            </button>
        }
        else if (contratoFinalizado)
        {
            <button class="btn btn-success" disabled>
                <i class="fa-solid fa-check"></i> Contrato finalizado
            </button>
        }
        else
        {
            <button class="btn btn-secondary" disabled>
                <i class="fa-solid fa-check-double"></i> Contrato pagado
            </button>
        }
        <a class="btn btn-secondary" asp-controller="Contrato" asp-action="Index">
             <i class="fa-solid fa-arrow-left"></i> Volver a Contratos
        </a>
    </div>
</div>


@* --- SECCIÓN DE ALERTAS MEJORADA --- *@

@if (pagosPendientes > 0 && !contratoFinalizado)
{
    <div class="alert alert-warning" role="alert">
        <i class="fa-solid fa-triangle-exclamation"></i>
        <strong>Atención:</strong> Existen <strong>@pagosPendientes</strong> pago(s) pendiente(s) que ya deberían haberse abonado.
    </div>
}

@if (contratoFinalizado)
{
    @if (contratoFinalizadoAnticipado)
    {
        <div class="alert alert-danger" role="alert">
            <strong>Este contrato fue finalizado anticipadamente.</strong>
        </div>
    }
    else
    {
        <div class="alert alert-success" role="alert">
            <strong>Este contrato fue finalizado correctamente al cumplir su plazo.</strong>
        </div>
    }
}
else
{
    <div class="alert @(pagosRestantes == 0 ? "alert-success" : "alert-info")" role="alert">
        @if (pagosRestantes > 0)
        {
            <strong>Pagos restantes para finalizar el contrato:</strong> @pagosRestantes
        }
        else
        {
            <strong><i class="fa-solid fa-check-double"></i> Este contrato ya está totalmente pagado.</strong>
        }
    </div>
}


<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th class="text-center">Núm. de Pago</th>
                <th>Método de pago</th>
                <th class="text-center">Fecha de pago</th>
                <th class="text-end">Monto</th>
                <th class="text-center">Anulado</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pago in Model)
            {
                <tr class="@((pago.Anulado ?? false) ? "table-secondary text-muted" : "")">
                    <td class="text-center">@pago.NumeroPago</td>
                    <td>@pago.MetodoPago</td>
                    <td class="text-center">@pago.FechaPago.ToString("dd/MM/yyyy")</td>
                    <td class="text-end">$@pago.Monto</td>
                    <td class="text-center">
                        @if (pago.Anulado ?? false)
                        {
                            <span class="badge bg-danger fs-6">Sí</span>
                        }
                        else
                        {
                            <span class="badge bg-success fs-6">No</span>
                        }
                    </td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            @if (!(pago.Anulado ?? false) && !contratoFinalizado)
                            {
                                <a class="btn btn-sm btn-primary" asp-action="Modificar" asp-route-idPago="@pago.IdPago" title="Editar">
                                    <i class="fa-solid fa-pen"></i> Editar
                                </a>

                                var formId = $"formAnular-{pago.IdPago}";
                                <form id="@formId" asp-action="Anular" method="post" class="d-inline">
                                    <input type="hidden" name="idPago" value="@pago.IdPago" />
                                    <input type="hidden" name="idContrato" value="@idContrato" />
                                    <button type="button" class="btn btn-sm btn-danger" title="Anular Pago"
                                            onclick="mostrarModalConfirmacion('Anular pago', '¿Seguro que querés anular este pago? Esta acción no se puede deshacer.', '@formId')">
                                        <i class="fa-solid fa-ban"></i> Anular
                                    </button>
                                </form>
                            }

                            <a class="btn btn-sm btn-warning" asp-action="Detalles" asp-route-idPago="@pago.IdPago" title="Ver detalles">
                                <i class="fa-solid fa-eye"></i> Detalles
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<nav aria-label="Paginación">
    <ul class="pagination justify-content-center">
        <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-idContrato="@idContrato" asp-route-paginaNro="@(paginaActual - 1)">Anterior</a>
        </li>

        @for (int i = 1; i <= totalPaginas; i++)
        {
            <li class="page-item @(i == paginaActual ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-idContrato="@idContrato" asp-route-paginaNro="@i">@i</a>
            </li>
        }

        <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-idContrato="@idContrato" asp-route-paginaNro="@(paginaActual + 1)">Siguiente</a>
        </li>
    </ul>
</nav>

<script src="~/js/modalReutilizable.js"></script>
@await Html.PartialAsync("_ModalConfirmacion", ("", "", ""))
@await Html.PartialAsync("_ModalMensaje", TempData["ErrorMensaje"] as string)